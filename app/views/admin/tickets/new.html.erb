<h1><%= t('.title')%></h1>

<%= form_for [:admin, @ticket], html: { class: 'form-horizontal' } do |f|  %>
  <%= render 'common/errors', resource: @ticket %>

  <div class="form-group">
    <%= f.label :user_id %>
		<%= f.select :user_id, options_from_collection_for_select(@users, :id, :email), {}, { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= f.label :train_id %>
		<%= f.select :train_id, options_from_collection_for_select(@trains, :id, :number), {}, { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= f.label :start_station_id %>
		<%= f.select :start_station_id, options_from_collection_for_select(@stations, :id, :name), {}, { class: 'form-control' } %>
  </div> 

	<div class="form-group">
    <%= f.label :end_station_id %>
		<%= f.select :end_station_id, options_from_collection_for_select(@stations, :id, :name), {}, { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= f.label :passenger_name %>
    <%= f.text_field :passenger_name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :passport_number %>
    <%= f.text_field :passport_number, class: 'form-control' %>
  </div>

  <%= f.submit t('common.create'), class: 'btn btn-primary find' %>

<% end %>