<p id="notice"><%= notice %></p>

<p>
  <strong>Название:</strong>
  <%= @route.name %>
</p>
<p>
  <strong>Поезда на маршруте:</strong>
  <% if @route.trains.empty? %>
    Поездов нет
  <% else %>
    <ul>
      <% @route.trains.each do |train| %>
        <li><%= train.number %></li>
      <% end %>
    </ul>
  <% end %>
</p>

<p>
  <strong>Станции на маршруте:</strong>
  <% if @route.railway_stations.empty? %>
      Станций нет
  <% else %>
    <table>
      <thead>
        <tr>
          <td>Название</td>
          <td>Позиция</td>
          <td>Время прибытия</td>
          <td>Время отправления</td>
        </tr>
      </thead>
      <tbody>
        <% @route.railway_stations.ordered.each do |station| %>
          <tr>
            <td><%= station.name %></td>
            <td>
              <%= form_tag update_position_railway_station_path(station), method: :patch do %>
                <%= number_field_tag :position, station.position_in(@route) %>
                <%= hidden_field_tag :route_id, @route.id %>
                <%= submit_tag "Изменить" %>
              <% end %>
            </td>
            <%= form_tag update_time_railway_station_path(station), method: :patch do %>
              <td>
                <%= time_field_tag :arrival_time, station.time(@route, :arrival_time) %>
              </td>
              <td>
                <%= time_field_tag :departure_time, station.time(@route, :departure_time) %>
                <%= hidden_field_tag :route_id, @route.id %>
                <%= submit_tag "Изменить" %>
              </td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</p>

<%= link_to 'Редактировать', edit_route_path(@route) %> |
<%= link_to 'Назад', routes_path %>
